#:kivy 2.0.0
#:import images_path kivymd.images_path
#:import threading threading
<Wfh_main_window>:
    size: dp(250), dp(450)
    MDFloatLayout:

        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: .5, 0, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
                    #source: 'wfh_logo_001.png'

            Image:
                size_hint: None, None
                size: root.size
                allow_stretch: False
                keep_ratio: False
                source: 'Presentation1.png'

                #Ellipse:
                    #size: min(self.size), min(self.size)
                    #pos: root.center_x - min(self.size)/2, root.center_y - min(self.size)/2

            #Label:
                #text: 'Select start to remain in "Active" status on any messaging service.'
                #pos_hint: {'center_x':0.5,'center_y':0.88}
            Label:
                id: activelbl
                text: ''
                text_size: self.size
                pos: (395,410)
        BoxLayout:
            orientation:'horizontal'
            #height: 10
            padding: 55
            spacing: 233
            size_hint: None, None
            size: dp(250), dp(450)
            TooltipMDIconButton:
                id: screenshot
                icon: "monitor-screenshot"
                #size_hint: (.5, .15)
                #pos: (100,100)
                #size_hint_x: 0.00-1.00
                #size_hint_y: 0.00-1.00
                #pos_hint: {'x': 0.00-1.00, 'y': 0.00-1.00}
                text: 'SCREEN SHOT'
                md_bg_color: 0, 1, 1, 1
                #pos: (35,20)
                tooltip_text: self.icon
                on_press: threading.Thread(target=root.screenshot_a).start()
            MDSwitch:
                id: my_switch
                widget_style: "ios"
                #widget_style: "android"
                pos: (375,20)
                #height: dp(50)
                width: dp(64)
                text:'text'
                active: False
                selected_color: .3, 0, 1, 1
                on_active: threading.Thread(target=root.time_a).start() if self.active == True else threading.Thread(target=root.stop_a).start()
                #threading.Thread(target=root.time_a(self, self.active)).start()
            TooltipMDIconButton:
                text: ""
                icon: "information"
                #pos: (765,20)
                md_bg_color: 0, 1, 1, 1
                tooltip_text: self.icon
                on_release: banner.show()
        #ToggleButton:
            #id: a_test
            #text:''
            #pos: (172,220)
            #size_hint: (.6, .4)
            #background_normal: 'off-swtchEDIT.png'
            #background_down: 'on-swtchEDIT.png'
            #on_state: threading.Thread(target=root.time_a).start() if self.state == 'down' else threading.Thread(target=root.stop_a).start()

        Label:
            id: activelbl
            text: ''
            text_size: self.size
            halign: 'center'
            valign: 'middle'
        MDBanner:
            id: banner
            #type: "two-line"
            text: ["Flip the switch to stay 'Active' on any messaging service."]
            text_size: sp(5)
            over_widget: screen
            vertical_pad: toolbar.height
            adaptive_height: True
        MDToolbar:
            id: toolbar
            #title: '"Switch ON", "to remain in "Active" status on any messaging service."'
            elevation: 10
            pos_hint: {'top': 0}
            size_hint: (2, .01)
            #color: 'white'

        MDBoxLayout:
            id: screen
            orientation: "vertical"
            size_hint_y: None
            height: Window.height - toolbar.height

         
